{
    "name": "litegraph.tsx",
    "version": "0.4.2",
    "description": "A flow graph node editor similar to LiteGraph.js, Blender Nodes, or ReactFlow.  It works in an HTML5 Canvas and allows to export graphs to be included in applications.",
    "main": "build/litegraph.core.js",
    "types": "src/litegraph.d.ts",
    "private": false,
    "scripts": {
        "build:core": "tsc -p ./tooling/tsconfig.core.json",
        "build:mini": "tsc -p ./tooling/tsconfig.mini.json",
        "build:whole": "tsc -p ./tooling/tsconfig.whole.json",

        "doc": "jsdoc -c ./tooling/jsdoc.config.json -d ./documentation -r --verbose --debug",

        "server": "nodemon ./tooling/server.js",
        
        "test": "jest --config ./tooling/jest.config.js",
        "lint": "npx eslint src",
        "lint:fix": "npx eslint --fix src"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/litegraph-tsx/litegraph.tsx.git"
    },
    "author": "",
    "contributors": [
        {
            "name": "Javi",
            "url": "http://github.com/jagenjo"
        },
        {
            "name": "Daniel Lewis",
            "url": "http://github.com/daniel-lewis-ab"
        },
        {
            "name": "Atlasan",
            "url": "http://github.com/atlasan"
        },
        {
            "name": "DrJKL",
            "url": "http://github.com/DrJKL"
        }
    ],
    "license": "MIT",
    "files": [
        "build",
        "css/litegraph.css",
        "src/litegraph.d.ts"
    ],
    "bugs": {
        "url": "https://github.com/litegraph-tsx/litegraph.tsx/issues"
    },
    "homepage": "https://github.com/litegraph-tsx/litegraph.tsx#readme",
    "devDependencies": {
        "@types/jest": "^28.1.3",
        "eslint": "^8.37.0 ",
        "eslint-plugin-jest": "^27.2.1",
        "@stylistic/eslint-plugin": "^2.1.0",
        "jest": "^28.1.3",
        "jest-cli": "^28.1.3",
        "jsdoc": "^4.0.3",
        "nodemon": "^3.1.4",
        "typescript": "^5.5.2"
    },
    "dependencies": {
        "express": "^4.17.1"
    }
}
